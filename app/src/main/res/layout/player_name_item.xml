<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_icon_size_settings"
        android:orientation="horizontal"
        android:id="@+id/player_name_item">

        <ImageView
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:id="@+id/player_icon_imgview"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/mishka"
            android:textSize="25sp"
            android:gravity="center"
            android:editable="true"
            android:background="@color/black_pepper"
            android:id="@+id/player_name_item_et"/>
    </LinearLayout>
</LinearLayout>
