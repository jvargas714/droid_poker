<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="@dimen/player_cash_name_height"
            android:layout_width="@dimen/player_icon_size_div_two"
            android:background="@color/black"
            android:id="@+id/player_name_display_tv"
            android:text="Jay"
            android:textStyle="bold"
            android:textSize="10sp"
            android:typeface="normal"
            android:gravity="center"/>
        <TextView
            android:layout_height="@dimen/player_cash_name_height"
            android:layout_width="@dimen/player_icon_size_div_two"
            android:background="@color/black"
            android:text="@string/starting_cash_amt"
            android:textStyle="bold"
            android:textSize="10sp"
            android:typeface="normal"
            android:gravity="center"
            android:id="@+id/player_cash_display_tv"/>
    </LinearLayout>
</LinearLayout>