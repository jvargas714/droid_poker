<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/tabletop"
    tools:context="com.droidpoker.jay.droidpoker.GamePlay">

<!--start player 6 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/player6_cluster_ll"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="wrap_content"
            android:id="@+id/p6_hole_cards"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="invisible">

            <include layout="@layout/flipped_card_item">
            </include>

            <include layout="@layout/flipped_card_item">
            </include>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="@dimen/player_icon_size"
            android:id="@+id/player6_iv"
            android:visibility="visible" />

        <include layout="@layout/name_cash_display">
        </include>
    </LinearLayout>
    <!--end player 6 -->


<!--start player 1 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/player1_cluster_ll"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <include layout="@layout/flipped_card_item">
            </include>

            <include layout="@layout/flipped_card_item">
            </include>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="@dimen/player_icon_size"
            android:id="@+id/player1_iv"
            android:scaleType="fitCenter" />

        <include layout="@layout/name_cash_display">
        </include>
    </LinearLayout>
    <!--end player 1-->

    <!--start player 2 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/player2_cluster_ll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="wrap_content"
            android:id="@+id/p2_hole_cards"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="visible">

            <include layout="@layout/flipped_card_item">
            </include>

            <include layout="@layout/flipped_card_item">
            </include>
        </LinearLayout>

    <ImageView
        android:layout_width="@dimen/player_icon_size"
        android:layout_height="@dimen/player_icon_size"
        android:id="@+id/player2_iv" />

        <include layout="@layout/name_cash_display">
        </include>
    </LinearLayout>
    <!--end player 2-->


<!--begin player 5 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/player5_cluster_ll"
        android:visibility="invisible">

        <include layout="@layout/name_cash_display">
        </include>

    <ImageView
        android:layout_width="@dimen/player_icon_size"
        android:layout_height="@dimen/player_icon_size"
        android:id="@+id/player5_iv"
        android:visibility="visible"/>

        <LinearLayout
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="wrap_content"
            android:id="@+id/p5_hole_cards"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="invisible">

            <include layout="@layout/flipped_card_item">
            </include>

            <include layout="@layout/flipped_card_item">
            </include>
        </LinearLayout>
    </LinearLayout>
    <!--end player 5 -->

    <!--start player 4 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player4_cluster_ll"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:visibility="invisible">

        <include layout="@layout/name_cash_display" >
        </include>

    <ImageView
        android:layout_width="@dimen/player_icon_size"
        android:layout_height="@dimen/player_icon_size"
        android:id="@+id/player4_iv"
        android:visibility="visible"/>

        <LinearLayout
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="wrap_content"
            android:id="@+id/p4_hole_cards"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="invisible">

            <include layout="@layout/flipped_card_item">
            </include>

            <include layout="@layout/flipped_card_item">
            </include>
        </LinearLayout>
    </LinearLayout>

    <!--end player 4 -->

    <!--start player 3 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/player3_cluster_ll"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible">

        <include layout="@layout/name_cash_display" />

        <ImageView
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="@dimen/player_icon_size"
            android:id="@+id/player3_iv"
            android:scaleType="fitCenter"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="@dimen/player_icon_size"
            android:layout_height="wrap_content"
            android:id="@+id/p3_hole_cards"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="invisible">

            <include layout="@layout/flipped_card_item">
            </include>

            <include layout="@layout/flipped_card_item">
            </include>
        </LinearLayout>
    </LinearLayout>
    <!--end player 3 -->

    <!-- table cards -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:id="@+id/tablecards">

        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:id="@+id/flop1"/>
        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:id="@+id/flop2"/>
        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:id="@+id/flop3"/>
        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:id="@+id/turn"/>
        <ImageView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:id="@+id/river"/>
    </LinearLayout>

</RelativeLayout>
